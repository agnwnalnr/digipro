<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF6F7"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="185dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:background="@drawable/logo"
            android:text="Log in" />

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FCF6F7"
            android:isScrollContainer="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:isScrollContainer="false"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="328dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/kotak"
                    android:hint="Username"
                    android:paddingStart="20dp"
                    android:textColor="#474C52"
                    android:textColorHint="@color/grey"
                    android:textSize="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Email"
                    android:textColorHint="@color/grey"
                    app:boxBackgroundMode="none">

                    <EditText
                        android:id="@+id/sign_email"
                        android:layout_width="328dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/kotak"
                        android:padding="10dp"
                        android:textColor="#474C52"
                        android:textSize="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Phone Number"
                    android:textColorHint="@color/grey"
                    app:boxBackgroundMode="none">

                    <EditText
                        android:id="@+id/Phone_number"
                        android:layout_width="328dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/kotak"
                        android:padding="10dp"
                        android:textColor="#474C52"
                        android:textSize="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Password"
                    android:textColorHint="@color/grey"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/brown"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/brown">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Pass"
                        android:layout_width="328dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/kotak"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="#474C52"
                        android:textSize="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Confirm Password"
                    android:textColorHint="@color/grey"
                    app:boxBackgroundMode="none"
                    app:passwordToggleEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ConfPass"
                        android:layout_width="328dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/kotak"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="#474C52"
                        android:textSize="12dp" />

                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="328dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:autoText="false"
                    android:background="@color/brown"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    tools:text="Sign Up" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By signing up I agree to the "
                            android:textColor="#000000"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms  Conditions "
                            android:textColor="@color/brown"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="and "
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/btn_privacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Privacy Policy"
                            android:textColor="@color/brown"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? "
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/btn_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:linksClickable="true"
                        android:onClick="goToLoginPage"
                        android:text="Login"

                        android:textColor="@color/brown"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>